{
  "$schema": "https://json.schemastore.org/prettierrc",

  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "semi": false,
  "singleQuote": false,

  "plugins": ["@typespec/prettier-plugin-typespec"],
  "overrides": [
    {
      "files": "*.tsp",
      "options": { "parser": "typespec" }
    }
  ]
}
